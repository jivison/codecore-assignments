<div class="cards-container">
    <% @posts.each do |post| %>
        <div class="card">
            <div class="card-text">
                <h3 class="card-title"><%= link_to post.title, post_path(post) %></h3>
                <p class="card-body"><%= post.body.truncate(50) %></p>
            </div>
        </div>
    <% end %>
</div>
