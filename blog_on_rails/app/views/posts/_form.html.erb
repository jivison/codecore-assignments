<div>
    <% if @post.errors.any? %>
        <% @post.errors.full_messages.each do |msg| %>
            <p><%= msg %></p>
        <% end %>
    <% end %>
</div>

<%= form_for(@post) do |f| %>
    <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: "form-control" %>
    </div>

    <%= f.submit class: "btn btn-outline-primary" %>

<% end %>
